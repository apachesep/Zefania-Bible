<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ZEFANIABIBLE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field name="dict_id" type="sql" label="ZEFANIABIBLE_FILTER_NULL_SELECT_DICTIONARY" description="" default="" query="SELECT DISTINCT id, name FROM #__zefaniabible_dictionary_info" key_field="id" value_field="name" onchange="this.form.submit();" required="1" >
			<option value="">ZEFANIABIBLE_FILTER_NULL_SELECT_DICTIONARY</option>
		</field>					
		<field name="item" type="sql" label="ZEFANIABIBLE_MENU_DICTIONARY_STRONG_NUMBER" description="" default="" query="SELECT DISTINCT item FROM #__zefaniabible_dictionary_detail" key_field="item" value_field="item" onchange="this.form.submit();" required="1" >
			<option value="">ZEFANIABIBLE_FILTER_NULL_SELECT_STRONG</option>
		</field>					
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ZEFANIABIBLE_LIST_FULL_ORDERING"
			description="COM_ZEFANIABIBLE_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ZEFANIABIBLE_LIST_LIMIT"
			description="COM_ZEFANIABIBLE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>