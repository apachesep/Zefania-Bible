<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_ZEFANIABIBLE_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
		<field
			name="published"
			type="status"
			label="COM_ZEFANIABIBLE_FILTER_PUBLISHED"
			description="COM_ZEFANIABIBLE_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>
		<field
			name="access"
			type="accesslevel"
			label="JOPTION_FILTER_ACCESS"
			description="JOPTION_FILTER_ACCESS_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_ACCESS</option>
		</field>
		<field
			name="author_id"
			type="author"
			label="COM_ZEFANIABIBLE_FILTER_AUTHOR"
			description="COM_ZEFANIABIBLE_FILTER_AUTHOR_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_AUTHOR</option>
		</field>
		<field
			name="language"
			type="contentlanguage"
			label="JOPTION_FILTER_LANGUAGE"
			description="JOPTION_FILTER_LANGUAGE_DESC"
			onchange="this.form.submit();"
			>
			<option value="">JOPTION_SELECT_LANGUAGE</option>
			<option value="*">JALL</option>
		</field>
		<field 
			name="title"
			type="sql"
			label="COM_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_TITLE_LABEL"
			description="COM_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_TITLE_DESC"
			default=""
			query="SELECT DISTINCT title FROM #__zefaniabible_zefaniacomment"
			key_field="title"
			value_field="title"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_TITLE_FILTER</option>
		</field>					
		<field 
			name="full_name"
			type="sql"
			label="COM_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_FULL_NAME_LABEL"
			description="COM_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_FULL_NAME_DESC"
			default=""
			query="SELECT DISTINCT full_name FROM #__zefaniabible_zefaniacomment"
			key_field="full_name"
			value_field="full_name"
			onchange="this.form.submit();"
			required="1"
			>
			<option value="">COM_ZEFANIABIBLE_ZEFANIABIBLE_ZEFANIACOMMENT_FIELD_FULL_NAME_FILTER</option>
		</field>					
	</fields>
	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="COM_ZEFANIABIBLE_LIST_FULL_ORDERING"
			description="COM_ZEFANIABIBLE_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.title ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">JGRID_HEADING_ORDERING_ASC</option>
			<option value="a.ordering DESC">JGRID_HEADING_ORDERING_DESC</option>
			<option value="a.state ASC">JSTATUS_ASC</option>
			<option value="a.state DESC">JSTATUS_DESC</option>
			<option value="a.access ASC">JGRID_HEADING_ACCESS_ASC</option>
			<option value="a.access DESC">JGRID_HEADING_ACCESS_DESC</option>
			<option value="a.created_by ASC">JAUTHOR_ASC</option>
			<option value="a.created_by DESC">JAUTHOR_DESC</option>
			<option value="language ASC">JGRID_HEADING_LANGUAGE_ASC</option>
			<option value="language DESC">JGRID_HEADING_LANGUAGE_DESC</option>
			<option value="a.created ASC">JDATE_ASC</option>
			<option value="a.created DESC">JDATE_DESC</option>
			<option value="a.id ASC">JGRID_HEADING_ID_ASC</option>
			<option value="a.id DESC">JGRID_HEADING_ID_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_ZEFANIABIBLE_LIST_LIMIT"
			description="COM_ZEFANIABIBLE_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>